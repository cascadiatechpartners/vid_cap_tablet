# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/vid_cap_tablet
MONGODB_DATABASE=vid_cap_tablet

# AWS S3 Configuration (optional - set UPLOAD_METHOD to 's3' to use)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_S3_FOLDER=videos

# SFTP Configuration (optional - set UPLOAD_METHOD to 'sftp' to use)
SFTP_HOST=tomlaptop
SFTP_PORT=22
SFTP_USERNAME=tom
SFTP_PASSWORD=your_password
# SFTP_PRIVATE_KEY_PATH=/home/tom/.ssh/id_rsa
SFTP_UPLOAD_DIR=/home/tom/videos

# Upload Method: 's3' or 'sftp' or 'local'
UPLOAD_METHOD=sftp

# Video Capture Settings
VIDEO_CAPTURE_DEVICE=/dev/video0
VIDEO_RESOLUTION=1920x1080
VIDEO_FRAMERATE=30
VIDEO_BITRATE=5000k
AUDIO_DEVICE=hw:1,0

# Preview Settings
PREVIEW_RESOLUTION=640x360
PREVIEW_FRAMERATE=15

# Storage Settings
UPLOADS_DIR=./uploads
TEMP_DIR=./temp

# Server Settings
PORT=3000
HOST=localhost
